<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/info"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/avenirltstd_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COUCOU"
        android:textColor="@color/proxi_button_purple"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_swipe"
        android:fontFamily="@font/avenirltstd_medium"
        android:layout_below="@+id/info">

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirltstd_medium"
        />
    </jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/avenirltstd_medium"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foregroundGravity="center"
            android:src="@drawable/plus"
            app:backgroundTint="@color/proxi_button_purple"
            app:rippleColor="@color/proxi_button_purple" />

        <TextView
            android:id="@+id/noMissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous n'avez pas encore postulé \n à une offre"
            android:textAlignment="center"
            android:fontFamily="@font/avenirltstd_medium"
            android:layout_gravity="center"
            android:textColor="@color/proxi_button_purple"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>
</FrameLayout>